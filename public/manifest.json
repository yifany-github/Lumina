{
    "manifest_version": 3,
    "name": "Lumina - AI Bookmark Manager",
    "version": "1.0.0",
    "author": "Yifan",
    "description": "Manage, summarize, and search bookmarks with AI.",
    "permissions": [
        "bookmarks",
        "storage",
        "tabs",
        "scripting",
        "offscreen",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "src/background/index.js",
        "type": "module"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}